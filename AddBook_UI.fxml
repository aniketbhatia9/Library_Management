<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="230.0" prefWidth="421.0" xmlns="http://javafx.com/javafx/20.0.1" fx:controller="com.example.libraryui.Controller" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Pane prefHeight="30.0" prefWidth="422.0">
         <children>
            <Label contentDisplay="CENTER" layoutX="173.0" layoutY="2.0" text="Add Book" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </Pane>
      <TextField fx:id="name" promptText="Book Name">
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="20.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="category" layoutX="20.0" layoutY="30.0" promptText="Book Category">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="author" layoutX="20.0" layoutY="30.0" promptText="Book Author">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="edition" layoutX="10.0" layoutY="56.0" promptText="Book Edition">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <HBox prefHeight="44.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" prefHeight="44.0" prefWidth="299.0" onAction="#addBook" text="Save" />
            <Button mnemonicParsing="false" prefHeight="44.0" prefWidth="304.0" text="Cancel" textAlignment="JUSTIFY" />
         </children>
      </HBox>
   </children>
</VBox>
